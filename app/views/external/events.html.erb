<h1>Events Page</h1>
<p>Events page stuff goes here</p>

<h1>Events Today</h1>

<% if @events_today.length > 0 %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Event Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events_today.each do |event| %>
        <tr>
          <td><%= event.date %></td>
          <td><%= event.event_name %></td>
          <td><%= truncate event.description, length: 40, separator: /\w+/ %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No Events</p>
<% end %>

