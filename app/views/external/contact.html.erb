<div class="content" style="display: flex;">
    <div class="container" style="margin: auto; display: flex; flex-direction: column">
        <h1 style="margin: auto;">Contacts</h1>
        <img src="/assets/default.jpg" alt="profile" style="width: 30vw; margin: auto; max-width: 250px;">
        <p style="margin: auto;"><%= @page['description'] %></p>
        <ul style="margin: auto">
            <% if @page['links'] %>
                <% @page['links'].each do |key, value| %>
                    <li><%= link_to key, value %></li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>