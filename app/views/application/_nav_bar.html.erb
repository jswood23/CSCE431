<%= stylesheet_link_tag "navbar" %>

<nav class="navbar navbar-expand-lg navbar-light justify-content-center" style="background-color: #FFFFFF90;box-shadow: 0 .25rem .75rem #00000020;">
  <%# Root icon %>
  <a class="navbar-brand w-50 me-auto px-2" href="/">
      <span> <img src="/assets/mchso-logo.png" alt="logo" width="50" height="50"> </span>
      MCHSO
  </a>

    <%# Nav bar toggler: for mobile site %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    

    <%# Main Nav Bar Buttons %>
    <div class="navbar-collapse collapse w-100 px-2" id="navbarSupportedContent">
      <ul class="navbar-nav w-100 justify-content-center">
        <%# Home Page Button %>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/home">Home</a>
        </li>

        <%# About Page Button %>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/about">About Us</a>
        </li>
        
        <%# Events Page Button %>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/view_events">Events</a>
        </li>

        <%# Contact Page Button %>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/contact">Contact Us</a>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto w-100 justify-content-end">
        <% if current_user %>
          <%# Member Pages Dropdown List %>
          <% if member? %>
            <li class="nav-item dropdown">
              <a class="nav-link active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Member
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%# Profile Page Button %>
                <%# <li><a class="dropdown-item" href="/profile">My Profile</a></li>  %>

                <%# Contact List Page Button %>
                <li><a class="dropdown-item" href="/internal_contact">Contact List</a></li>
                
                <%# Attend Event Page Button %>
                <li><a class="dropdown-item" href="/attend">Attend an Event</a></li>
              </ul>
            </li>
          <% end %>

          <%# Admin Pages Dropdown List %>
          <% if admin? %>
            <li class="nav-item dropdown">
              <a class="nav-link active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Admin
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%# Manage Event Page Button %>
                <li><a class="dropdown-item" href="/events">Manage Events</a></li>
                
                <%# Manage Members Page Button %>
                <li><a class="dropdown-item" href="/manage_members">Manage Members</a></li>
                
                <%# Manage Pages Page Button %>
                <li><a class="dropdown-item" href="/manage_pages">Manage Pages</a></li>
              </ul>
            </li>
          <% end %>
        <% end %>

        <%# Login/Logout Buttons %>
        <% if current_user %>
          <li class="nav-item dropdown">

            <a class="nav-link" href="#" id="navbarProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="/assets/person.svg" alt="person" width="25" height="25">
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li class="dropdown-header d-flex">
                <% if current_user.avatar_url %>
                  <%= image_tag(current_user.avatar_url, class: 'rounded-circle', size: 45, alt: "Profile Picture") %>
                <% else %>
                  <%= image_tag("/assets/default.jpg", class: 'rounded-circle', size: 45, alt: "Profile Picture") %>
                <% end %>
                <div class="d-flex flex-column my-auto px-2">
                  <small><%= current_user.full_name %></small>
                  <small><%= current_user.email %></small>
                </div>
              </li>
              <div class="dropdown-divider"></div>
              <li> <%= link_to "Manage Account", edit_user_registration_path, class: "dropdown-item" %> </li>
              <li> <%= link_to "Log out", destroy_user_session_path, data: {turbo: "false"}, method: :delete, class: "dropdown-item" %> </li>
            </ul>
          </li>
        <% else %>
            <li class="nav-item"> <%= link_to "Login", new_user_session_path, class: "nav-link active" %> </li>
            <li class="nav-item"> <%= link_to "Signup", new_user_registration_path, class: "nav-link active" %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
