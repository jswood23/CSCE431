<%= stylesheet_link_tag "events" %>

<body>
  <div class="container">
    <div class="box">
      <div class="center">
        <h1>Editing Event</h1>

        <%= render 'form', event: @event %>
        <%= link_to 'Delete Event', event_path(@event), method: :delete, class: 'black_button' %>
        <p>
          <%= link_to 'Show', @event %> |
          <%= link_to 'Back', events_path %>
        </p>
      </div>
    </div>
  </div>
</body>
