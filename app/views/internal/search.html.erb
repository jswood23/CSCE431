<h3>Search Results</h3>
<br>
   <% if @results.length > 0%>
  <table>
    <thead>
      <th>Picture</th>
      <th>Name</th>
      <th>Member Status</th>
      <th>Years Active</th>
      <th>Email</th>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr id=<%= "member_row_#{result.id}" %>>
          <td><image src= <%= result.avatar_url %> </td>
          <td><%= result.full_name %></td>
          <td><%= get_user_status(result) %>
          <td><%= result.information.start_year %> - <%= result.information.end_year %></td>
          <td><%= result.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No members found.</p>
<% end %>
<br>
<%= link_to 'Back', '/internal_contact', class: "btn btn-primary"%>