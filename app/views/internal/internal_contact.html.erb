<h1>Member Contact Information</h1>
<br>
<%= form_tag(search_path, :method => "get") do %>
  <div class = "input-group">
    <%= search_field_tag :search, params[:search], placeholder: "Search for member by first name or full name", class: "form-control" %>
    <div class = "input-group-btn">
      <%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil%>
    </div>
  </div>
<% end %>
<br>
<% if @members.length > 0%>
  <table>
    <thead>
      <th>Picture</th>
      <th>Name</th>
      <th>Member Status</th>
      <th>Years Active</th>
      <th>Email</th>
    </thead>
    <tbody>
      <% @members.each do |user| %>
        <tr id=<%= "member_row_#{user.id}" %>>
          <td><image src= <%= user.avatar_url %> </td>
          <td><%= user.full_name %></td>
          <td><%= get_user_status(user) %>
          <td><%= user.information.start_year %> - <%= user.information.end_year %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
      <% @alumni.each do |user| %>
        <tr id=<%= "member_row_#{user.id}" %>>
          <td><image src= <%= user.avatar_url %> </td>
          <td><%= user.full_name %></td>
          <td><%= get_user_status(user) %>
          <td><%= user.information.start_year %> - <%= user.information.end_year %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No members.</p>
<% end %>


